= simple_form_for @computer_image, defaults:{ label:false } do |f|
  .row
    .col-lg-4.col-lg-offset-4
      .form-group
        %label.control-label Image
        = f.input :image, input_html:{class: 'form-control'}
      .form-group
        %label.control-label Details
        = f.input :details, as: :text, input_html:{class: 'form-control'}
      .text-center
        .btn-group
          = f.button :submit, 'Save', class: 'btn btn-primary'
          = link_to 'Back', admin_index_path, class: 'btn btn-primary'