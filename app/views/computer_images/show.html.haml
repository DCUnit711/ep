.row
  .col-lg-12
    .btn-group
      = link_to admin_index_path, class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-arrow-left
      = link_to edit_computer_image_path(@computer_image), class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-pencil
  .col-lg-3
    .panel.panel-primary
      .panel-heading
        %h4 Computer Image Info
      .panel-body
        %p
          %strong Image:
          = @computer_image.image
        %p
          %strong Details:
          = @computer_image.details