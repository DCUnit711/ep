= simple_form_for @passdown, defaults:{ label:false } do |f|
  .row
    .col-lg-4.col-lg-offset-4
      .form-group
        %label.control-label Employee
        = f.input :employee_id, collection: Employee.all, label_method: :name, input_html:{class: 'form-control'}
      .form-group
        %label.control-label Passdown
        = f.input :body, input_html:{class: 'form-control', rows: '10'}
      .text-center
        .btn-group
          = f.button :submit, 'Save', class: 'btn btn-primary'
          = link_to 'Back', welcome_index_path, class: 'btn btn-primary'
