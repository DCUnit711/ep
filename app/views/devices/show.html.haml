.row
  .col-lg-12
    .btn-group
      = link_to devices_path, class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-arrow-left
      = link_to edit_device_path(@device), class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-pencil
  .col-lg-3
    .panel.panel-primary
      .panel-heading
        %h4 Printer Info
      .panel-body
        %p
          %strong Type:
          = @device.device_type
