%table.table.table-hover
  %thead
    %tr
      %th Name
      %th Support Center
      %th
  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.name
        %td= link_to employee.copy_center.location, copy_center_path(employee.copy_center_id) unless employee.copy_center.nil?
        %td
          = link_to edit_employee_path(employee), class: 'btn-sm' do
            %i.glyphicon.glyphicon-pencil
          = link_to employee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm' do
            %i.glyphicon.glyphicon-trash
