= simple_form_for @issue_type, defaults:{ label:false } do |f|
  .row
    .col-lg-4.col-lg-offset-4
      .form-group
        %label.control-label Device
        = f.input :device_id, collection: Device.all, label_method: :device_type, input_html:{class: 'form-control'}
      .form-group
        %label.control-label Issue
        = f.input :issue, input_html:{class: 'form-control'}
      .text-center
        .btn-group
          = f.button :submit, 'Save', class: 'btn btn-primary'
          = link_to 'Back', issue_types_path, class: 'btn btn-primary'
