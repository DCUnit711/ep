= simple_form_for @copy_center, defaults:{ label:false } do |f|
  .row
    .col-lg-4.col-lg-offset-4
      .form-group
        %label.control-label Location
        = f.input :location, input_html:{class: 'form-control'}
      .form-group
        %label.control-label Phone Number
        = f.input :phone_number, input_html:{class: 'form-control'}
      .form-group
        %label.control-label E-mail
        = f.input :email, input_html:{class: 'form-control'}
      .text-center
        .btn-group
          = f.button :submit, 'Save', class: 'btn btn-primary'
          = link_to 'Back', admin_index_path, class: 'btn btn-primary'