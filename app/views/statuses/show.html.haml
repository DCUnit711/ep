.row
  .col-lg-12
    .btn-group
      = link_to statuses_path, class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-arrow-left
      = link_to edit_status_path(@status), class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-pencil
  .col-lg-3
    .panel.panel-primary
      .panel-heading
        %h4 Status
      .panel-body
        %p
          %b Status:
          = @status.status
