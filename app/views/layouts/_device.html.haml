%table.table.table-hover
  %thead
    %tr
      %th Type
      %th
  %tbody
    - @devices.each do |device|
      %tr
        %td= device.device_type
        %td
          = link_to edit_device_path(device), class: 'btn-sm' do
            %i.glyphicon.glyphicon-pencil
          = link_to device, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm' do
            %i.glyphicon.glyphicon-trash
