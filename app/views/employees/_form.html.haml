= simple_form_for @employee, defaults:{ label:false } do |f|
  .row
    .col-lg-4.col-lg-offset-4
      .form-group
        %label.control-label Name
        = f.input :name, input_html:{class: 'form-control'}
      .form-group
        %label.control-label Copy Center
        = f.input :copy_center_id, collection: CopyCenter.all, label_method: :location, input_html:{class: 'form-control'}
      .text-center
        .btn-group
          = f.button :submit, 'Save', class: 'btn btn-primary'
          = link_to 'Back', admin_index_path, class: 'btn btn-primary'