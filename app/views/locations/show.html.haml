.row
  .col-lg-12
    .btn-group
      = link_to locations_path, class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-arrow-left
      = link_to edit_location_path(@location), class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-pencil
  .col-lg-3
    .panel.panel-primary
      .panel-heading
        %h4 Toner Location Info
      .panel-body
        %p
          %strong Location:
          = @location.location
        %p
          %strong Phone number:
          = @location.phone_number