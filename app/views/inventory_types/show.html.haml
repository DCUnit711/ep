.row
  .col-lg-12
    .btn-group
      = link_to inventory_types_path, class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-arrow-left
      = link_to edit_inventory_type_path(@inventory_type), class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-pencil
  .col-lg-3
    .panel.panel-primary
      .panel-heading
        %h4 Type
      .panel-body
        %p
          %strong Type:
          = @inventory_type.inv_type
