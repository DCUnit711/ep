%table.table.table-hover
  %thead
    %tr
      %th Image
      %th
  %tbody
    - @computer_images.each do |computer_image|
      %tr
        %td= link_to computer_image.image, computer_image_path(computer_image)
        %td
          = link_to edit_computer_image_path(computer_image), class: 'btn-sm' do
            %i.glyphicon.glyphicon-pencil
          = link_to computer_image, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm' do
            %i.glyphicon.glyphicon-trash