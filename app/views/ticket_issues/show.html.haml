.row
  .col-lg-12
    .btn-group
      = link_to ticket_issues_path, class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-arrow-left
      = link_to edit_ticket_issue_path(@ticket_issue), class: 'btn btn-sm btn-default' do
        %i.glyphicon.glyphicon-pencil
  .col-lg-3
    .panel.panel-primary
      .panel-heading
        %h4 Printer Info
      .panel-body
        %p
          %strong Ticket:
          = @ticket_issue.ticket_id
        %p
          %strong Issue type:
          = @ticket_issue.issue_type_id
        %p
          %strong Description:
          = @ticket_issue.description
        %p
          %strong Issue received method:
          = @ticket_issue.issue_received_method_id
%hr
/ .row
/   .col-lg-9
/     =render 'comments/list'
/   =render 'comments/form'
