= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, defaults:{ label:false}) do |f|
  .row
    .col-lg-4.col-lg-offset-4
      .form-group
        %label.control-label Username for #{current_user.email}
        = f.input :username, placeholder:"username", input_html:{class: 'form-control'}
      .form-group
        %label.control-label Change Password
        = f.input :password, autocomplete: "off", placeholder: "Leave blank to keep password", required: false, input_html:{class: 'form-control'}
        = f.input :password_confirmation, required: false, placeholder:'Confirm password change', input_html:{class: 'form-control'}
      .form-group
        %label.control-label Password
        = f.input :current_password, placeholder: "Enter current password to confirm changes", required: true, input_html:{class: 'form-control'}
      .form-actions
        = f.button :submit, "Update", class: 'btn btn-primary'
        = link_to "Back", :back, class: 'btn btn-primary'
        = link_to "Delete User", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'