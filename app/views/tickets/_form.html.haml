= simple_form_for [@ticketable, @ticket], defaults:{ label:false } do |f|
  .row
    .col-lg-3
      %h3 Add Ticket
      .form-group
        %label.control-label Created by:
        = f.input :created_employee_id, collection: Employee.all, label_method: :name, input_html:{class: 'form-control'}
      .btn-group
        = f.button :submit, 'Add', class: 'btn btn-primary'
