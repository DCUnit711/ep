%table.table.table-hover
  %thead
    %tr
      %th Device
      %th Issue
      %th
  %tbody
    - @issue_types.each do |issue_type|
      %tr
        %td= issue_type.device.device_type
        %td= issue_type.issue
        %td
          = link_to edit_issue_type_path(issue_type), class: 'btn-sm' do
            %i.glyphicon.glyphicon-pencil
          = link_to issue_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-sm' do
            %i.glyphicon.glyphicon-trash
