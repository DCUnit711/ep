.row
  .col-lg-offset-4.col-lg-4
    %h1 Sign In
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), defaults: { label: false }) do |f|
      .form-group
        = f.input :login, :required => false, :autofocus => true, input_html: { class: 'form-control', placeholder: 'Copy Center' }
      .form-group
        = f.input :password, :required => false, input_html: { class: 'form-control', placeholder: 'Password' }
      .form-group
        = f.label :remember_me do
          = f.check_box :remember_me
          Remember Me
      .form-group
        = f.button :submit, "Sign in", class: 'btn btn-primary'
    = render "devise/shared/links"